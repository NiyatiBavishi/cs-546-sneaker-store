<h1>{{ title }}</h1>
<main>
    <form action="/users/login" method="POST" id="login-form">
        <div class="mb-3">
            <label for="email">Email:</label>
            <input type="email" name="email" value="{{ email }}" id="email" class="form-control" placeholder="Email">
        </div>
        <div class="mb-3">
            <label for="password">Password:</label>
            <input type="password" name="password" value="{{ password }}" id="password" class="form-control"
                   placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>
    {{#if hasErrors}}
        {{#each errors}}
            <div class="alert alert-danger">
                {{this}}
            </div>
        {{/each}}
    {{/if}}
    <a href="/users/signup" class="link-primary">Need to register? Click here to sign-up</a>
</main>
