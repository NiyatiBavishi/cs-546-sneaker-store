<div
  class="row align-items-center justify-content-center g-0 min-vh-100 mt-4 mb-4"
>
  <div class="col-lg-5 col-md-8 py-8 py-xl-0">
    <!-- Card -->
    <div class="card shadow">
      <!-- Card body -->
      <div class="card-body p-6">
        <div class="mb-4">
          <h1 class="mb-1 fw-bold">Update Sneaker</h1>
        </div>
        <!-- Form -->
        <form
          action="/sneakers/updateSneakerNotifyBuyer"
          method="POST"
          id="sellForm"
        >
          <div class="mb-3">
            <div
              class="alert alert-danger d-none sellFormError"
              role="alert"
              id="sellFormError"
            >
            </div>
            <input
              type="text"
              value="{{sneaker._id}}"
              name="id"
              id="id"
              hidden
            />

            <label for="brandName" class="form-label">Brand Name</label>
            <input
              type="text"
              id="brandName"
              class="form-control"
              name="brandName"
              value="{{sneaker.brandName}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="modelName" class="form-label">Model Name</label>
            <input
              type="text"
              id="modelName"
              class="form-control"
              name="modelName"
              value="{{sneaker.modelName}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="size7" class="form-label">Size 7</label>
            <input
              type="number"
              id="size7"
              min="0"
              class="form-control"
              name="size7"
              placeholder="Quantity available here"
              value="{{sneaker.sizesAvailable.0.quantity}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="size8" class="form-label">Size 8</label>
            <input
              type="number"
              id="size8"
              min="0"
              class="form-control"
              name="size8"
              placeholder="Quantity available here"
              value="{{sneaker.sizesAvailable.1.quantity}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="size9" class="form-label">Size 9</label>
            <input
              type="number"
              id="size9"
              min="0"
              class="form-control"
              name="size9"
              placeholder="Quantity available here"
              value="{{sneaker.sizesAvailable.2.quantity}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="size10" class="form-label">Size 10</label>
            <input
              type="number"
              id="size10"
              min="0"
              class="form-control"
              name="size10"
              placeholder="Quantity available here"
              value="{{sneaker.sizesAvailable.3.quantity}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="size11" class="form-label">Size 11</label>
            <input
              type="number"
              id="size11"
              min="0"
              class="form-control"
              name="size11"
              placeholder="Quantity available here"
              value="{{sneaker.sizesAvailable.4.quantity}}"
              required=""
            />
          </div>
          <div class="mb-3">
            <label for="size12" class="form-label">Size 12</label>
            <input
              type="number"
              id="size12"
              min="0"
              class="form-control"
              name="size12"
              placeholder="Quantity available here"
              value="{{sneaker.sizesAvailable.5.quantity}}"
              required=""
            />
          </div>
          <label for="price">Price:</label><br />
          <input
            type="number"
            id="price"
            min="0"
            class="form-control"
            name="price"
            value="{{sneaker.price}}"
            required=""
          />
          <div>
            <div class="d-grid mt-4">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
