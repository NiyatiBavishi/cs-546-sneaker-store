{{#if error}}
  <div class="alert alert-primary" role="alert">
    {{error}}
  </div>
{{/if}}

<div class="container">
  <div class="row">
    {{#each sneakers}}
      <div class="col-sm-4 border">

        <form action="/sneakers/sneaker/{{_id}}" method="get">
          <h1>{{modelName}}</h1>
          <p> {{brandName}} </p>
          <img class="d-block w-100" src="../../public/images/LP1.jpeg" />

          <p>Price : {{price}}$</p>

          <input type="submit" value="BUY" />

        </form>

      </div>
    {{/each}}
  </div>
</div>